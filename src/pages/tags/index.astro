---
import Tag from "@components/Tag.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
const tags = [...new Set(posts.map((post) => post.data.tags).flat())].sort((a, b) => a.localeCompare(b));
---

<BaseLayout title="Tags" description="Find related blog posts by tag.">
  <h1>Tags</h1>
  <>
    {
      tags.map((tag) => (
        <Tag name={tag}/>
      ))
    }
  </>
</BaseLayout>
